@model PAW3.Models.DTOs.ProductDTO
@{
    ViewData["Title"] = "Crear Producto";
}

<div class="container mt-4">
    <h2 class="mb-3">Crear nuevo producto</h2>

    <form asp-controller="Product" asp-action="Create" method="post" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label for="ProductName" class="form-label">Nombre del producto</label>
            <input asp-for="ProductName" class="form-control" id="ProductName" required />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Description" class="form-label">Descripción</label>
            <textarea asp-for="Description" class="form-control" id="Description"></textarea>
        </div>

        <div class="mb-3">
            <label for="InventoryId" class="form-label">ID de Inventario</label>
            <input asp-for="InventoryId" type="number" class="form-control" id="InventoryId" required />
        </div>

        <div class="mb-3">
            <label for="SupplierId" class="form-label">ID del Proveedor</label>
            <input asp-for="SupplierId" type="number" class="form-control" id="SupplierId" required />
        </div>

        <div class="mb-3">
            <label for="Rating" class="form-label">Calificación</label>
            <input asp-for="Rating" type="number" step="0.1" class="form-control" id="Rating" />
        </div>

        <div class="mb-3">
            <label for="CategoryId" class="form-label">ID de Categoría</label>
            <input asp-for="CategoryId" type="number" class="form-control" id="CategoryId" required />
        </div>

        <div class="mb-3">
            <label for="LastModified" class="form-label">Última Modificación</label>
            <input asp-for="LastModified" type="datetime-local" class="form-control" id="LastModified"
                   value="@DateTime.UtcNow.ToString("yyyy-MM-ddTHH:mm")" />
        </div>

        <div class="mb-3">
            <label for="ModifiedBy" class="form-label">Modificado por</label>
            <input asp-for="ModifiedBy" class="form-control" id="ModifiedBy" value="Andrey" />
        </div>

        <div class="d-flex justify-content-end gap-2">
            <a class="btn btn-secondary" asp-controller="Product" asp-action="Index">Cancelar</a>
            <button type="submit" class="btn btn-success">Crear Producto</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}