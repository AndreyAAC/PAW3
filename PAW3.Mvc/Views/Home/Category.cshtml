@model IEnumerable<PAW3.Models.DTOs.CategoryDTO>
@{
    ViewData["Title"] = "Categorías";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <h1 class="display-6 m-0">Categorías</h1>

        <form asp-controller="Category" asp-action="Index" method="get" class="d-flex align-items-center gap-2">
            <input type="number" class="form-control" name="id" min="1" placeholder="Buscar por ID..."
                   style="max-width: 220px;" />
            <button type="submit" class="btn btn-outline-light">Buscar</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Limpiar</a>
        </form>

        <a class="btn btn-success"
           asp-controller="Category"
           asp-action="Create">
            Crear Nuevo
        </a>
    </div>

    @if (ViewBag.Info != null)
    {
        <div class="alert alert-info">@ViewBag.Info</div>
    }

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Última Modificación</th>
                <th style="width: 180px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CategoryId</td>
                        <td>@item.CategoryName</td>
                        <td>@item.Description</td>
                        <td>@item.LastModified</td>
                        <td>
                            <a class="btn btn-sm btn-primary me-2"
                               asp-controller="Category"
                               asp-action="Update"
                               asp-route-id="@item.CategoryId">
                                Actualizar
                            </a>

                            <form class="d-inline"
                                  method="post"
                                  asp-controller="Category"
                                  asp-action="Delete"
                                  asp-route-id="@item.CategoryId"
                                  onsubmit="return confirm('¿Seguro que deseas borrar la categoría @item.CategoryId?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger">
                                    Borrar
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No hay categorías para mostrar.</td>
                </tr>
            }
        </tbody>
    </table>
</div>