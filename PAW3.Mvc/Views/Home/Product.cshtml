@model PAW3.Mvc.Models.HomeViewModel
@{
    ViewData["Title"] = "Product Page";
}

<div class="container">

    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <h1 class="display-6 m-0">Productos</h1>

        <!-- 🔎 Barra de búsqueda por ID -->
        <form asp-controller="Product" asp-action="Index" method="get" class="d-flex align-items-center gap-2">
            <input type="number"
                   class="form-control"
                   name="id"
                   min="1"
                   placeholder="Buscar por ID..."
                   style="max-width: 220px;" />
            <button type="submit" class="btn btn-outline-light">Buscar</button>
            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Limpiar</a>
        </form>

        <a class="btn btn-success"
           asp-controller="Product"
           asp-action="Create">
            Crear Nuevo
        </a>
    </div>

    @if (ViewBag.Info != null)
    {
        <div class="alert alert-info">@ViewBag.Info</div>
    }

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Rating</th>
                <th>LastModified</th>
                <th style="width: 180px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Products != null && Model.Products.Any())
            {
                foreach (var item in Model.Products)
                {
                    <tr>
                        <td>@item.ProductId</td>
                        <td>@item.ProductName</td>
                        <td>@item.Description</td>
                        <td>@item.Rating</td>
                        <td>@item.LastModified</td>
                        <td>
                            <a class="btn btn-sm btn-primary me-2"
                               asp-controller="Product"
                               asp-action="Update"
                               asp-route-id="@item.ProductId">
                                Actualizar
                            </a>

                            <form class="d-inline"
                                  method="post"
                                  asp-controller="Product"
                                  asp-action="Delete"
                                  asp-route-id="@item.ProductId"
                                  onsubmit="return confirm('¿Seguro que deseas borrar el producto @item.ProductId?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger">
                                    Borrar
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No hay productos para mostrar.</td>
                </tr>
            }
        </tbody>
    </table>
</div>