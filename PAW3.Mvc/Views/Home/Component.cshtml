@model IEnumerable<PAW3.Models.DTOs.ComponentDTO>
@{
    ViewData["Title"] = "Componentes";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <h1 class="display-6 m-0">Componentes</h1>

        <form asp-controller="Component" asp-action="Index" method="get" class="d-flex align-items-center gap-2">
            <input type="number" class="form-control" name="id" step="1" placeholder="Buscar por ID..." style="max-width: 220px;" />
            <button type="submit" class="btn btn-outline-light">Buscar</button>
            <a asp-controller="Component" asp-action="Index" class="btn btn-secondary">Limpiar</a>
        </form>

        <a class="btn btn-success" asp-controller="Component" asp-action="Create">Crear Nuevo</a>
    </div>

    @if (ViewBag.Info != null)
    {
        <div class="alert alert-info">@ViewBag.Info</div>
    }

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Content</th>
                <th style="width: 180px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Content</td>
                        <td>
                            <a class="btn btn-sm btn-primary me-2"
                               asp-controller="Component" asp-action="Update" asp-route-id="@item.Id">
                                Actualizar
                            </a>
                            <form class="d-inline" method="post"
                                  asp-controller="Component" asp-action="Delete" asp-route-id="@item.Id"
                                  onsubmit="return confirm('¿Seguro que deseas borrar el componente @item.Id?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger">Borrar</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="4" class="text-center">No hay componentes para mostrar.</td></tr>
            }
        </tbody>
    </table>
</div>