@model PAW3.Models.DTOs.RoleDTO
@{
    ViewData["Title"] = "Actualizar Rol";
}
<div class="container mt-4">
    <h2 class="mb-3">Actualizar Rol (@Model.RoleId)</h2>

    <form asp-controller="Role" asp-action="Update" method="post" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="RoleId" />

        <div class="mb-3">
            <label for="RoleName" class="form-label">Nombre del Rol</label>
            <input asp-for="RoleName" class="form-control" id="RoleName" required maxlength="255" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end gap-2">
            <a class="btn btn-secondary" asp-controller="Role" asp-action="Index">Cancelar</a>
            <button type="submit" class="btn btn-primary">Actualizar Rol</button>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}