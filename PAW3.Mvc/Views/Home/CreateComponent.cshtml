@model PAW3.Models.DTOs.ComponentDTO
@{
    ViewData["Title"] = "Crear Componente";
}

<div class="container mt-4">
    <h2 class="mb-3">Crear nuevo componente</h2>

    <form asp-controller="Component" asp-action="Create" method="post" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()

        <!-- Id es identity (numeric(18,0)), no se muestra en Create -->

        <div class="mb-3">
            <label for="Name" class="form-label">Nombre</label>
            <input asp-for="Name" class="form-control" id="Name" required maxlength="50" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Content" class="form-label">Contenido</label>
            <input asp-for="Content" class="form-control" id="Content" required maxlength="100" />
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end gap-2">
            <a class="btn btn-secondary" asp-controller="Component" asp-action="Index">Cancelar</a>
            <button type="submit" class="btn btn-success">Crear Componente</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}