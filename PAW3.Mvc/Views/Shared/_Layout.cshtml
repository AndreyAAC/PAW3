<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PAW3.Mvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PAW3.Mvc.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- 🔹 Navbar principal (menú visible en todas las páginas) -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">PAW3 System</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Product" asp-action="Index">Producto</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Category" asp-action="Index">Categoría</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Inventory" asp-action="Index">Inventario</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="User" asp-action="Index">Usuario</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Role" asp-action="Index">Roles</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Component" asp-action="Index">Componentes</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- 🔹 Contenedor principal de las vistas -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- 🔹 Footer -->
    <footer class="border-top footer text-muted">
        <div class="container text-center py-2">
            &copy; 2025 - PAW3.Mvc | <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- 🔹 Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
